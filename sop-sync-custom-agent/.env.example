# Jira-Confluence Sync Agent — Environment Variables
# Copy this file to .env and fill in your actual values.
# Never commit .env to version control.

# ---------------------------------------------------------------------------
# Jira
# ---------------------------------------------------------------------------

# Your Atlassian domain (e.g. mycompany.atlassian.net)
JIRA_HOST=

# The email address tied to your Atlassian account
JIRA_EMAIL=

# API token from https://id.atlassian.com/manage-profile/security/api-tokens
JIRA_API_TOKEN=

# ---------------------------------------------------------------------------
# Confluence
# ---------------------------------------------------------------------------

# Your Atlassian domain — usually the same as JIRA_HOST
CONFLUENCE_HOST=

# The email address tied to your Atlassian account
CONFLUENCE_EMAIL=

# API token (can reuse JIRA_API_TOKEN if same account)
CONFLUENCE_API_TOKEN=

# The space key where new pages will be created (e.g. ENG, DOCS, TEAM)
CONFLUENCE_SPACE_KEY=
